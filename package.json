{
  "name": "terraform-module-gcs-publisher",
  "version": "1.0.0",
  "description": "GitHub Action to push and maintain Terraform modules with versioning in GCS buckets",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && ncc build src/main.ts -o dist --source-map --minify",
    "test": "jest",
    "lint": "eslint '**/*.ts'",
    "lint:yaml": "yamllint -c .yamllint.yml '.github/**/*.yml' 'action.yml'",
    "lint:md": "markdownlint '**/*.md' --ignore node_modules",
    "format": "prettier --write '**/*.{ts,js,json,md,yml,yaml}'",
    "check": "prettier --check '**/*.{ts,js,json,md,yml,yaml}'",
    "security": "npm audit",
    "prepare": "husky",
    "verify": "npm run lint && npm run check && npm test",
    "all": "npm run verify && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/infraspecdev/terraform-module-gcs-publisher.git"
  },
  "keywords": [
    "github-action",
    "terraform",
    "gcs",
    "google-cloud-storage",
    "versioning"
  ],
  "author": "Infraspec",
  "license": "MIT",
  "engines": {
    "node": ">=23.0.0"
  },
  "dependencies": {
    "@actions/core": "1.11.1",
    "@actions/exec": "1.1.1",
    "@actions/github": "6.0.0",
    "@actions/io": "1.1.3",
    "@google-cloud/storage": "7.16.0",
    "semver": "7.7.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@types/jest": "29.5.14",
    "@types/node": "22.13.11",
    "@types/semver": "7.5.8",
    "@typescript-eslint/eslint-plugin": "8.27.0",
    "@typescript-eslint/parser": "8.27.0",
    "@vercel/ncc": "0.38.3",
    "eslint": "9.23.0",
    "globals": "^16.0.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "js-yaml": "^4.1.0",
    "markdownlint-cli": "^0.44.0",
    "prettier": "^3.5.3",
    "ts-jest": "29.2.6",
    "typescript": "5.8.2"
  }
}
