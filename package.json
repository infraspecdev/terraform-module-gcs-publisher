{
  "name": "terraform-module-gcs-publisher",
  "version": "1.0.0",
  "description": "GitHub Action to push and maintain Terraform modules with versioning in GCS buckets",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.js -o dist --source-map",
    "test": "jest",
    "lint": "eslint '**/*.js'",
    "format": "prettier --write '**/*.js'",
    "prepare": "husky install",
    "all": "npm run lint && npm run format && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/infraspecdev/terraform-module-gcs-publisher.git"
  },
  "keywords": [
    "github-action",
    "terraform",
    "gcs",
    "google-cloud-storage",
    "versioning"
  ],
  "author": "Infraspec",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.11.1",
    "@actions/exec": "1.1.1",
    "@actions/github": "6.0.0",
    "@actions/io": "1.1.3",
    "@google-cloud/storage": "7.15.2",
    "semver": "7.7.1"
  },
  "devDependencies": {
    "@vercel/ncc": "0.36.1",
    "eslint": "8.47.0",
    "husky": "8.0.3",
    "jest": "29.6.3",
    "prettier": "3.0.2"
  }
}
